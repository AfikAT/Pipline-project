#!groovy
pipeline {
    environment {
        REGISTRY = "afik/argocd-project"
        REGESTRY_CRED = 'Docker_hub'
        BUILD_NUMBER = "${env.BUILD_ID}"
    }
    agent any
    stages {
         stage('pushing_image') {
             steps {
                 dir('import') {
                    script {
                            echo 'Building Dockerfile'
                            sh './push_docker_image.sh ${BUILD_NUMBER} ${REGISTRY}'
                    }
                 }
             }
         }
    }
}
